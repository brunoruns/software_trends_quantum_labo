{
    "name": "Conda Environment",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "postCreateCommand": "conda init bash && source ~/.bashrc && conda activate quantum",
    "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
    },
    "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter"
    ],
    "remoteUser": "vscode",
    "mounts": [
        "source=${localWorkspaceFolder}/environment.yml,target=/workspace/environment.yml,type=bind"
    ]
}
